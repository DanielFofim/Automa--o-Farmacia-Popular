{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "robot",
      "args": ["--outputdir", "results/", "--loglevel", "WARN", "--quietmode", "tests/"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Login Tests",
      "type": "shell",
      "command": "robot",
      "args": ["--outputdir", "results/", "--include", "login", "--loglevel", "WARN", "tests/"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Run Smoke Tests",
      "type": "shell",
      "command": "robot",
      "args": ["--outputdir", "results/", "--include", "smoke", "--loglevel", "WARN", "tests/"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "pip",
      "args": ["install", "-q", "robotframework", "robotframework-seleniumlibrary"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
